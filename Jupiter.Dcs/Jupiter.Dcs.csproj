<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Authors>Jeffrey Jones</Authors>
    <Description>Autogenerated DCS-gRPC files connecting to a running mission for the Jupiter application; a Game Master tool for DCS World</Description>
    <Version>0.0.1</Version>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
   <RootNamespace>RurouniJones.Jupiter.Dcs</RootNamespace>
	<AssemblyName>RurouniJones.Jupiter.Dcs</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.17.3" />
    <PackageReference Include="Grpc.Net.Client" Version="2.52.0" />
    <PackageReference Include="Grpc.Tools" Version="2.39.0-pre1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Remove="Protos\*.proto" />
    <Protobuf Include="Protos\dcs\**\*.proto" ProtoRoot="Protos" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Protos\" />
  </ItemGroup>

</Project>
